{
    "name": "vue-beautify",
    "displayName": "vue-beautify",
    "description": "Beautify Vue code in place for vscode",
    "version": "1.0.3",
    "publisher": "peakchen90",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Formatters"
    ],
    "icon": "source/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/peakchen90/vue-beautify"
    },
    "bugs": {
        "url": "https://github.com/peakchen90/vue-beautify/issues"
    },
    "keywords": [
        "vue",
        "format",
        "beautify",
        "vue-format",
        "vue-beautify"
    ],
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "pub": "vsce publish patch"
    },
    "activationEvents": [
        "onCommand:vueBeautify.format",
        "onCommand:vueBeautify.formatAttribute"
    ],
    "main": "./extension",
    "contributes": {
        "keybindings": [
            {
                "command": "vueBeautify.format",
                "key": "ctrl+shift+f",
                "mac": "cmd+shift+f",
                "linux": "ctrl+shift+f",
                "when": "editorTextFocus && !editorReadonly"
            }
        ],
        "commands": [
            {
                "command": "vueBeautify.format",
                "title": "Beautify Vue"
            },
            {
                "command": "vueBeautify.formatAttribute",
                "title": "Beautify Attribute"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == vue && !editorHasSelection",
                    "command": "vueBeautify.format",
                    "group": "1_modification"
                },
                {
                    "when": "editorLangId == vue && editorHasSelection",
                    "command": "vueBeautify.formatAttribute",
                    "group": "1_modification"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "eslint": "^3.6.0",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "esformatter": "^0.10.0",
        "esformatter-jsx": "^7.4.1",
        "js-beautify": "^1.6.11"
    }
}
